{
  "name": "drivechain-launcher",
  "version": "0.1.0",
  "private": true,
  "description": "Drivechain Launcher Application",
  "author": {
    "name": "Drivechain",
    "email": "support@drivechain.info"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@bufbuild/protobuf": "^2.2.5",
    "@connectrpc/connect": "^2.0.2",
    "@connectrpc/connect-node": "^2.0.2",
    "@electron/remote": "^2.1.1",
    "@primer/octicons-react": "^19.14.0",
    "@reduxjs/toolkit": "^2.2.6",
    "adm-zip": "^0.5.14",
    "axios": "^1.7.2",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "canvas-confetti": "^1.9.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^10.0.0",
    "fs-extra": "^11.3.0",
    "hdkey": "^2.1.0",
    "lucide-react": "^0.417.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.25.1",
    "redux": "^5.0.1",
    "tar": "^7.4.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "build": "npm run react-build && npm run electron-build",
    "gen-proto": "buf generate --clean",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron --no-sandbox .\"",
    "start:prod": "concurrently \"cross-env NODE_ENV=production BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=production electron --no-sandbox .\"",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(axios)/)"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.drivechain.launcher",
    "productName": "Drivechain Launcher",
    "files": [
      "build/**/*",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "electronLanguages": [
      "en"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "artifactName": "Drivechain-Launcher-${version}.${ext}",
      "maintainer": "Drivechain <support@drivechain.info>",
      "executableName": "drivechain-launcher",
      "executableArgs": [
        "--no-sandbox"
      ],
      "icon": "public"
    },
    "win": {
      "target": "nsis",
      "artifactName": "Drivechain-Launcher-Setup-${version}.${ext}",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": false,
      "runAfterFinish": false,
      "include": "installer.nsh"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "artifactName": "Drivechain-Launcher-${version}-${arch}.${ext}",
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Application requests access to the device's camera.",
        "NSMicrophoneUsageDescription": "Application requests access to the device's microphone.",
        "NSDocumentsFolderUsageDescription": "Application requests access to the user's Documents folder.",
        "NSDownloadsFolderUsageDescription": "Application requests access to the user's Downloads folder."
      },
      "notarize": true
    }
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron": "^1.4.38",
    "@types/node": "^22.15.20",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/react-redux": "^7.1.34",
    "@types/react-router-dom": "^5.3.3",
    "@types/redux": "^3.6.31",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "png2icons": "^2.0.1",
    "prettier": "^3.3.3",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.5.3"
  }
}
